#!/bin/bash

### Include Git Aware Prompt ###
export GITAWAREPROMPT=~/.bash/
source $GITAWAREPROMPT/prompt.sh

# some more ls aliases
alias ll='ls -lh'
alias la='ls -A'
alias l='ls -CF'

### Filesystem Aliases ###

mkcd () { mkdir $1 ;  cd $1 ; }
rmdir () { rm -rf "$@"; }

alias cch='make clean && make -j 32 && make -j 8 check'
alias ch='make -j 8 check'


follow () { cp $1 $2 ; cd $2 ; }

### End Filesystem Section ###

#keybinding addition
if [ $TERM == "xterm" ]; then
    bind '"\C-H":backward-kill-word'
fi

#Infinite history
export HISTSIZE=
